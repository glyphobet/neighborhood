<VirtualHost *:80>
    ServerName  hood
    ServerAdmin matt-hood@theory.org

    DocumentRoot "/home/matt/neighborhood/webpage/"
    <Directory "/home/matt/neighborhood/webpage/">
        AddHandler python-program .py
	PythonHandler web
        PythonDebug On
        Options None
        AllowOverride None
        Order allow,deny
        allow from all
    </Directory>

                   
    ErrorLog /var/log/apache2/error-hood.log
    CustomLog /var/log/apache2/hood.log combined
</VirtualHost>

