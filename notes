# how to create a new db
createuser -S -D -R -P hood
createdb -E UNICODE -O hood hood
createlang plpgsql hoodtest
psql hood hood < schema.sql
psql hood hood < trigger.sql

# how to dump the db
pg_dump -F c -U hood hood > neighborhood.pgdmp

# how to dump the schema
pg_dump -s -U hood -Fp -f schema.sql hood

# how to export the data to CSV, in psql
\copy tablename TO tablename.csv WITH CSV HEADER

# how to create a new db and restore from the master db
dropdb hood
createdb -E UNICODE -O hood hood
pg_restore -d hood neighborhood.pgdmp
